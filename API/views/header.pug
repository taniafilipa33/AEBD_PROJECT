style.
  .w3-sidebar a {font-family: "Roboto", sans-serif}
  body,h1,h2,h3,h4,h5,h6,.w3-wide {font-family: "Montserrat", sans-serif;}

// Sidebar/menu
nav#mySidebar.w3-sidebar.w3-bar-block.w3-white.w3-collapse.w3-top(style='z-index:3;width:250px')
  .w3-container.w3-display-container.w3-padding-16
    i.fa.fa-remove.w3-hide-large.w3-button.w3-display-topright(onclick='w3_close()')
    h3.w3-wide
      b AEBD
  .w3-padding-64.w3-large.w3-text-grey(style='font-weight:bold')
    a.w3-bar-item.w3-button(href='/tablespaces/loader') Tablespaces
    a.w3-bar-item.w3-button(href='/users/') Users
    a.w3-bar-item.w3-button(href='/datafiles/') Datafiles
    a.w3-bar-item.w3-button(href='/sessions/') Sessions
    a.w3-bar-item.w3-button(href='/database/') Database


// Top menu on small screens
header.w3-bar.w3-top.w3-hide-large.w3-black.w3-xlarge
  .w3-bar-item.w3-padding-24.w3-wide AEBD
  a.w3-bar-item.w3-button.w3-padding-24.w3-right(href='javascript:void(0)' onclick='w3_open()')
    i.fa.fa-bars
// Overlay effect when opening sidebar on small screens
#myOverlay.w3-overlay.w3-hide-large(onclick='w3_close()' style='cursor:pointer' title='close side menu')

// Top header
header.w3-container.w3-xlarge
